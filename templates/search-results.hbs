{{#each results}}
    <section class="result gray-border rounded-border">
        <img src="{{this.icon_url}}" width="75px" height="75px" class="result-image" alt="{{this.title}} icon"/>
        <div class="result-info">
            <header class="result-title">
                <a class="result-name" href="{{this.page_url}}"><h2>{{this.title}}</h2></a><!--
                --><address class="muted result-author-container">by <a class="result-author" href="{{this.author_url}}" rel="author">{{this.author}}</a></address>
            </header>
            <p>{{this.description}}</p>
            <footer class="mod-info">
                <span class="mod-downloads" title="Download count">
                    <svg role="img" aria-label="Download count"><use href="/static/images/icon/spritesheet.svg#download"/></svg><!--
                    -->{{format this.downloads}}
                </span>

                <span class="mod-created" title="Created date">
                    <svg role="img" aria-label="Created date"><use href="/static/images/icon/spritesheet.svg#created"/></svg><!--
                    -->{{this.date_created}}
                </span>

                <span class="mod-updated" title="Last updated">
                    <svg role="img" aria-label="Last updated"><use href="/static/images/icon/spritesheet.svg#updated"/></svg><!--
                    -->{{this.date_modified}}
                </span>

                <span class="mod-version" title="Minecraft version">
                    <svg role="img" aria-label="Minecraft version"><use href="/static/images/icon/spritesheet.svg#version"/></svg><!--
                    -->{{this.latest_version}}
                </span>

                <div class="loader-icons">
                    {{#contains this.categories "forge"}}
                        <div class="loader-forge" title="Forge">
                            <svg role="img" aria-label="Forge" class="forge" viewbox="0 0 120 66.7"><use href="#forge"/></svg>
                        </div>
                    {{/contains}}
                    {{#contains this.categories "fabric"}}
                        <div class="loader-fabric" title="Fabric">
                            <img alt="Fabric" src="/static/images/icon/fabric.png"/>
                        </div>
                    {{/contains}}
                </div>
            </footer>
        </div>
        <section class="result-badges" aria-label="Mod categories">
            {{#contains this.categories "technology"}}
                <div class="tech-badge result-badge" title="Tech">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#tech"/></svg>
                    <p>TECH</p>
                </div>
            {{/contains}}
            {{#contains this.categories "adventure"}}
                <div class="adventure-badge result-badge" title="Adventure">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#adventure"/></svg>
                    <p>ADVENTURE</p>
                </div>
            {{/contains}}
            {{#contains this.categories "magic"}}
                <div class="magic-badge result-badge" title="Magic">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#magic"/></svg>
                    <p>MAGIC</p>
                </div>
            {{/contains}}
            {{#contains this.categories "utility"}}
                <div class="utility-badge result-badge" title="Utility">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#util"/></svg>
                    <p>UTILITY</p>
                </div>
            {{/contains}}
            {{#contains this.categories "decoration"}}
                <div class="decoration-badge result-badge" title="Decoration">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#decoration"/></svg>
                    <p>DECORATION</p>
                </div>
            {{/contains}}
            {{#contains this.categories "library"}}
                <div class="library-badge result-badge" title="Library">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#library"/></svg>
                    <p>LIBRARY</p>
                </div>
            {{/contains}}
            {{#contains this.categories "worldgen"}}
                <div class="worldgen-badge result-badge" title="Worldgen">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#world"/></svg>
                    <p>WORLDGEN</p>
                </div>
            {{/contains}}
            {{#contains this.categories "cursed"}}
                <div class="cursed-badge result-badge" title="Cursed">
                    <img alt="cursed" src="/static/images/icon/cursed.png" class="badge-image" aria-hidden="true"/>
                    <p>CURSED</p>
                </div>
            {{/contains}}
            {{#contains this.categories "storage"}}
                <div class="storage-badge result-badge" title="Storage">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#storage"/></svg>
                    <p>STORAGE</p>
                </div>
            {{/contains}}
            {{#contains this.categories "food"}}
                <div class="food-badge result-badge" title="Food">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#food"/></svg>
                    <p>FOOD</p>
                </div>
            {{/contains}}
            {{#contains this.categories "equipment"}}
                <div class="equipment-badge result-badge" title="Equipment">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#equipment"/></svg>
                    <p>EQUIPMENT</p>
                </div>
            {{/contains}}
            {{#contains this.categories "misc"}}
                <div class="misc-badge result-badge" title="Misc">
                    <svg class="badge-image" aria-hidden="true"><use href="/static/images/icon/spritesheet.svg#misc"/></svg>
                    <p>MISC</p>
                </div>
            {{/contains}}
        </section>
    </section>
{{else}}
    <div class="search-error">
        {{#if ../query.q}}
        <h2>No results found for query <code>"{{../query.q}}"</code></h2>
        {{else}}
        <h2>No results found</h2>
        {{/if}}
    </div>
{{/each}}
