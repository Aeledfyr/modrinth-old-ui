                    c0,0.1-1.8-10.9-1.9-12.3c-10.4,0-27.9,0-27.9,0c1.9,1.6,12.4,10.6,19.9,14.3c3.7,1.8,8.3,1.9,12.4,2c2.1,0.1,4.2,0.2,5.8,1.8
                    c2.3,2.2,2.8,5.7,0.8,8.3c-1.9,2.6-7.3,3.2-7.3,3.2L39,49.1v6.4h10.3l0.3-6.3l8.9-6.3c-0.9,0.8-3.1,2.8-6.2,7.7
                    c-0.7,1.1-1.3,2.3-1.7,3.5c2.2-1.9,6.8-3.2,12.2-3.2c5.3,0,9.9,1.3,12.1,3.2c-0.4-1.2-1-2.4-1.7-3.5c-3.2-4.9-5.3-6.9-6.2-7.7
                    l8.9,6.3l0.3,6.3h9.6v-6.4l-4.5-5.5c0,0-6.7-0.4-8.4-3.2C67.7,32.6,74.8,20.4,91.6,16.7z"/>
    </symbol>
</svg>

<div class="back-to-top-wrapper" aria-hidden="true">
    <div class="filler"></div>
    <a href="#" class="back-to-top" id="backToTop" aria-label="Jump back to the beginning of the page" tabindex="-1">
        <img src="/static/images/icon/up.svg" alt="up">
    </a>
</div>

<div class="main-flex">
    <aside class="filters" aria-label="Search category filters">
        <div class="sort">
            <label for="sort">
                Sort by:
            </label>
            <select id="sort" onchange="changeSortType(this)">
                <option value="relevance" selected="selected">Relevance</option>
                <option value="downloads">Total Downloads</option>
                <option value="updated">Last Updated</option>
                <option value="newest">Newest</option>
            </select>
        </div>

        <div class="categories">
            <input type="checkbox" class="categories-toggle" id="categories-toggle"/>
            <label class="categories-label" for="categories-toggle">
                <h1>Categories</h1>
            </label>
            {{>category-badge category="technology" id="tech" icon="tech" label="Tech" }}
            {{>category-badge category="adventure" id="adventure" icon="adventure" label="Adventure" }}
            {{>category-badge category="magic" id="magic" icon="magic" label="Magic" }}
            {{>category-badge category="utility" id="utility" icon="util" label="Utility" }}
            {{>category-badge category="decoration" id="decoration" icon="decoration" label="Decoration" }}
            {{>category-badge category="library" id="library" icon="library" label="Library" }}
            {{>category-badge category="worldgen" id="worldgen" icon="world" label="Worldgen" }}
            <input type="checkbox" id="checkbox-cursed" class="category-checkbox"/>
            <label class="cursed-badge category-badge" id="category-cursed" for="checkbox-cursed">
                <img alt="cursed" src="/static/images/icon/cursed.png" class="badge-image" aria-hidden="true"/>
                <p>Cursed</p>
            </label>
            {{>category-badge category="storage" id="storage" icon="storage" label="Storage" }}
            {{>category-badge category="food" id="food" icon="food" label="Food" }}
            {{>category-badge category="equipment" id="equipment" icon="equipment" label="Equipment" }}
            {{>category-badge category="misc" id="misc" icon="misc" label="Misc" }}
        </div>

        <div class="categories">
            <input type="checkbox" class="categories-toggle" id="loaders-toggle"/>
            <label class="categories-label" for="loaders-toggle">
                <h1>Loaders</h1>
            </label>
            {{>category-badge category="forge" id="forge" icon="forge-alt" label="Forge" }}
            <input type="checkbox" id="checkbox-fabric" class="category-checkbox"/>
            <label class="fabric-badge category-badge" id="category-fabric" for="checkbox-fabric">
                <img alt="fabric" src="/static/images/icon/fabric.png" class="badge-image" aria-hidden="true"/>
                <p>Fabric</p>
            </label>
        </div>
    </aside>

    <aside class="versions" aria-label="Search version filters">
        <button type="button" class="clear-button" onclick="clearFilters()">Clear Filters</button>

        <div class="version-type">
            <input type="checkbox" class="versions-toggle" id="releases-toggle" checked/>
            <label class="version-type-label" for="releases-toggle">Releases</label>
            <div class="version-scroll" id="releases">

            </div>
        </div>

        <div class="version-type">
            <input type="checkbox" class="versions-toggle" id="snapshots-toggle" checked/>
            <label class="version-type-label" for="snapshots-toggle">Snapshots</label>
            <div class="version-scroll" id="snapshots">

            </div>
        </div>

        <div class="version-type">
            <input type="checkbox" class="versions-toggle" id="archaic-toggle" checked/>
            <label class="version-type-label" for="archaic-toggle">Archaic</label>
            <div class="version-scroll" id="archaic">

            </div>
        </div>
    </aside>

    <main class="search-main">
        <div class="search-div">
            <input class="search-bar" type="text" id="search-input" placeholder="Search for mods..." aria-label="Search for mods" oninput="handleSearch(0)">
        </div>

        <div id="results" class="results">
            {{> search-results}}
        </div>
    </main>
</div>

<script src="/static/js/search.js"></script>

</body>
</html>